{
  "name": "one-more-big-beautiful-browser",
  "version": "1.0.0",
  "description": "One More Big Beautiful Browser - Monorepo with extension and web",
  "private": true,
  "scripts": {
    "install:extension": "cd extension && pnpm install",
    "install:web": "cd web && pnpm install",
    "install": "pnpm run install:extension && pnpm run install:web",
    "dev:extension": "cd extension && pnpm dev",
    "dev:web": "cd web && pnpm dev -p 3001",
    "dev": "concurrently -n \"extension,web\" -c \"blue,green\" \"pnpm run dev:extension\" \"pnpm run dev:web\"",
    "start": "pnpm run dev",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint:extension": "cd extension && pnpm run compile",
    "lint:web": "cd web && pnpm run lint",
    "lint": "pnpm run format:check && pnpm run lint:extension && pnpm run lint:web",
    "lint:fix": "pnpm run format",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.6.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0"
}
